<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusStrategy.Domitory.DomitoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/freshman_campus_domitory_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/freshman_top_gradient"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/freshman_essential_domitory_toolbar_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="学生寝室"
                android:layout_gravity="center"
                android:textColor="#FEFEFF"
                android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/freshman_back"
        android:id="@+id/freshman_campus_domitory_back_imageview"/>


    <com.flyco.tablayout.CommonTabLayout
        android:layout_below="@id/freshman_campus_domitory_toolbar"
        android:id="@+id/freshman_campus_domitory_tablayout"
        app:tl_indicator_color="#54ACFF"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="86dp"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_tab_space_equal="true"
        app:tl_textsize="16sp"
        app:tl_textUnselectColor="#999999"
        app:tl_textSelectColor="#54ACFF"
        app:tl_indicator_anim_enable="true"
        app:tl_divider_width="0dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

    </com.flyco.tablayout.CommonTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/freshman_campus_domitory_viewpager"
        android:layout_below="@id/freshman_campus_domitory_tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>



</RelativeLayout>