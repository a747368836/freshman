<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusStrategy.CampusMainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/freshman_campus_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/freshman_top_gradient"
        android:fitsSystemWindows="true">
            <TextView
                android:id="@+id/freshman_campus_main_toolbar_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="校园攻略"
                android:layout_gravity = "center"
                android:textColor="#FEFEFF"
                android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/freshman_back"
        android:id="@+id/freshman_campus_main_back_imageview"/>

    <LinearLayout
        android:layout_below="@id/freshman_campus_main_toolbar"
        android:id="@+id/freshman_campus_main_LinerLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView
            android:id="@+id/freshman_campus_main_canteen_cardview"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/freshman_campus_main_canteen_intent_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/freshman_campus_main_canteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/freshman_campus_main_canteen_intent_imageview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="学生食堂"
                    android:textColor="#555555"
                    android:textSize="14sp" />

            </RelativeLayout>
        </com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView>


        <com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView
            android:id="@+id/freshman_campus_main_domitory_cardview"
