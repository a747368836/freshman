                    android:layout_height="wrap_content"
                    android:text="周边美食"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView>
    </LinearLayout>

