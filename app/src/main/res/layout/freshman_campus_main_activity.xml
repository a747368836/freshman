            </RelativeLayout>
        </com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/freshman_campus_main_LinerLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/freshman_campus_main_toolbar"
        android:layout_marginTop="285dp"
        android:orientation="horizontal">

        <com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView
