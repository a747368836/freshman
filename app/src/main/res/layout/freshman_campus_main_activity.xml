                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/freshman_campus_main_domitory"
                    />
                <TextView
                    android:layout_below="@id/freshman_campus_main_domitory_intent_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学生寝室"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView>

        <com.mredrock.cyxbs.freshman.Tools.FixedCardview.CardView
